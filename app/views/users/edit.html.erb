<%# プロフィール編集画面 %>
<h2 class="form-header-title">User info</h2>
  <div class="form-body">
  <%# プロフィールを編集できるようにする %>
  <%= form_for(@user) do |f| %>

  <%# エラーメッセージ %>
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

    <div class="form-group has-icon">
      <label class="control-label" for="inputEmail">Name</label>
      <%= f.text_field :name, id:"inputEmail" %>
    </div>
    <div class="form-group has-icon">
      <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb"%>
      </div>
        <label class="control-label" for="inputEmail">Image</label>
        <%= f.attachment_field :profile_image, class: "user-edit-form" %>
    </div>
    <div class="form-group has-icon">
      <label class="control-label" for="inputEmail">Introduction</label>
      <%= f.text_field :introduction, id:"inputEmail" %>
    </div>
    <%= f.submit "Update User", class:"btn btn-default" %>
  <% end %>

<%# 共通テンプレートを記述 %>
<%# 新規投稿画面をここに記載 %>
<%# @消してるbook１箇所 %>

  <h2>New book</h2>
  <%= form_for(book) do |f| %>

    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="field">
      <h4>Opinion</h4>
      <%= f.text_area :body, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.submit 'Create Book', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>